<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find robot_description)/urdf/shin/shin.transmission.xacro"/>
  <xacro:include filename="$(find robot_description)/urdf/shin/shin.gazebo.xacro"/>
  
  <xacro:macro name="shin_v0" params="prefix parent *joint_origin *joint_axis">
	<joint name="${prefix}_shin_joint" type="revolute">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="${prefix}_shin_link"/>
          <limit effort="500" velocity="10" lower="-3.14159" upper = "3.14159"/>
          <dynamics damping="0.005" friction="0.1"/>
	  <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="${prefix}_shin_link">
	  <visual>
		<geometry>
		  <mesh filename="package://robot_description/meshes/DAE/shin/shin.dae"/>
		</geometry>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="package://robot_description/meshes/STL/shin/shin.stl"/>
		</geometry>
	  </collision>
	  <inertial>
		<origin xyz="-0.158 0 -0.011"/>
		<mass value="0.66"/>
		<inertia ixx="0.0003" ixy="-0.00287" ixz="-0.0015" iyy="-0.31" iyz="0" izz="-0.31" />
	  </inertial>
	</link>
  </xacro:macro>
  
</robot>
